{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/post.css') }}" rel="stylesheet" />
    <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" />
{% endblock %}

{% block title %}My cool blog posts{% endblock %}

{% block body %}

    {% block javascripts %}
        <script src="{{ asset('/js/bootstrap.js') }}"></script>
        <script src="{{ asset('/js/jquery-1.10.2.js') }}"></script>
    {% endblock %}

    {% for post_data in post if post_data.title %}
        <p>
            <span style="float: left;"><h2>({{ post_data.id }}) {{ post_data.title }}</h2><span>
        </p>
        <p>{{ post_data.description }}</p>
        <p><a href="{{ path('post_del', {'id': post_data.id}) }}">del post</a></p>
        <p><a href="{{ path('post_update', {'id': post_data.id}) }}">update post</a></p>
    {% else %}
        <div>Posts not found</div>
    {% endfor %}
    <div><a href="{{ path('post_add') }}">Add random post</a></div>
{% endblock %}